{
  "name": "Twitch Voice → Chat",
  "description": "Перетворює голос на текст у чаті Twitch по кнопці.",
  "version": "1.0.0",
  "manifest_version": 3,
  "content_scripts": [
    {
      "matches": ["https://www.twitch.tv/*"],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_idle"
    }
  ]
}